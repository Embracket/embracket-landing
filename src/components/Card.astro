<figure class="card">
    <slot />
</figure>

<style>
    .card{
        width: 60%;
	max-width: 1200px;
        height: 70%;

        padding: 4em;

        background-color: rgba(var(--backdrop-color),0.2);
        border-radius: var(--aggressive-border-radius);

        backdrop-filter: blur(var(--default-border-radius));
    }

    @media only screen and (max-width: 700px) {
        .card{
            width: 100%;
            height: 100%;

            padding: 2em;

            border-radius: 0;

            background-color: rgba(var(--backdrop-color),0.5);
        }
    }
</style>
